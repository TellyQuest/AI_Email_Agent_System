{
  "name": "ai-email-agent",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered email agent for bookkeeping automation",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @ai-email-agent/database generate",
    "db:migrate": "pnpm --filter @ai-email-agent/database migrate",
    "db:push": "pnpm --filter @ai-email-agent/database push",
    "db:studio": "pnpm --filter @ai-email-agent/database studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "pg-boss": "^12.5.4"
  }
}
